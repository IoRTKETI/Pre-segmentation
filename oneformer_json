    "CITYSCAPES_CLASSES_SETTING = {\n",
    "    \"unlabeled\": 255,\n",
    "    \"ego vehicle\": 255,\n",
    "    \"rectification border\": 255,\n",
    "    \"out of roi\": 255,\n",
    "    \"static\": 255,\n",
